<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<VBox xmlns:fx="http://javafx.com/fxml/1" fx:id="answerContainerVbox" alignment="CENTER" maxHeight="-Infinity"
      maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="580.0"
      xmlns="http://javafx.com/javafx/8" fx:controller="org.rijnders.OpenQuestionContainerController">
   <userData>
      <fx:reference source="controller"/>
   </userData>
   <children>
      <TextField fx:id="yourAnswerTextField" promptText="your answer">
         <VBox.margin>
            <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
         </VBox.margin>
      </TextField>
      <Button fx:id="confirmButton" defaultButton="true" mnemonicParsing="false" text="Confirm"
              onAction="#setConfirmButton">
         <padding>
            <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
         </padding>
         <font>
            <Font name="System Bold" size="18.0"/>
         </font>
         <VBox.margin>
            <Insets top="30.0"/>
         </VBox.margin>
      </Button>
   </children>
</VBox>
