<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.rijnders.NewQuestionnairePageController">
   <children>
      <VBox alignment="TOP_CENTER" layoutX="234.0" layoutY="7.0" prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <children>
            <Text strokeType="OUTSIDE" strokeWidth="0.0" text="New Questionnair" textAlignment="CENTER">
               <font>
                  <Font size="20.0" />
               </font>
               <VBox.margin>
                  <Insets top="5.0" />
               </VBox.margin>
            </Text>
            <HBox alignment="CENTER" VBox.vgrow="NEVER">
               <children>
                  <Text strokeType="OUTSIDE" strokeWidth="0.0" text="Name:">
                     <HBox.margin>
                        <Insets right="9.0" />
                     </HBox.margin>
                  </Text>
                  <TextField fx:id="nameTextField" />
               </children>
               <padding>
                  <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
               </padding>
            </HBox>
            <ListView fx:id="listView" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
               <VBox.margin>
                  <Insets left="20.0" right="20.0" />
               </VBox.margin>
            </ListView>
            <HBox alignment="CENTER" prefHeight="50.0" prefWidth="600.0" VBox.vgrow="NEVER">
               <children>
                   <Button fx:id="backBtn" cancelButton="true" mnemonicParsing="false" onAction="#backBtnClick"
                           text="Back">
                       <HBox.margin>
                           <Insets left="10.0" right="10.0"/>
                       </HBox.margin>
                   </Button>
                   <Button fx:id="addOpenBtn" mnemonicParsing="false" onAction="#newOpenBtnClick"
                           text="Add Open Question">
                       <HBox.margin>
                           <Insets left="10.0" right="10.0"/>
                       </HBox.margin>
                   </Button>
                   <Button fx:id="addMultipleChoiceBtn" mnemonicParsing="false" onAction="#newMultipleCBtnClick"
                           text="Add Multiple Choice Question">
                       <HBox.margin>
                           <Insets left="10.0" right="10.0"/>
                       </HBox.margin>
                   </Button>
                   <Button fx:id="deleteBtn" disable="true" mnemonicParsing="false" onAction="#setDeleteBtn"
                           text="Delete">
                       <HBox.margin>
                           <Insets left="10.0" right="10.0"/>
                       </HBox.margin>
                   </Button>
                   <Button fx:id="saveBtn" defaultButton="true" mnemonicParsing="false" onAction="#saveButtonClick"
                           text="Save">
                       <HBox.margin>
                           <Insets left="10.0" right="10.0"/>
                       </HBox.margin>
                   </Button>
               </children>
            </HBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
